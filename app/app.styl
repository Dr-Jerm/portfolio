backgroundColor = #edf7f2
textColor = #363636
secondaryBackgroundColor = #ebebeb
headerColor = #E3E3E3
subHeaderColor = #8A0917
accentColor = #7D7D7D
subAccentColor = #A3A3A3


vendor(prop, args)
  -webkit-{prop} args
  -moz-{prop} args
  -o-{prop} args
  {prop} args

background-linear-gradient(startPoint, startColor, startInterval, endColor, endInterval)
  background-color startColor
  background-image -webkit-linear-gradient(startPoint, startColor startInterval, endColor endInterval)
  background-image -moz-linear-gradient(startPoint, startColor startInterval, endColor endInterval)
  background-image -ms-linear-gradient(startPoint, startColor startInterval, endColor endInterval)
  background-image -o-linear-gradient(startPoint, startColor startInterval, endColor endInterval)
  background-image linear-gradient(startPoint, startColor startInterval, endColor endInterval)




@font-face
  font-family 'droid_sansregular'
  src url('../font/droidsans-webfont.eot')
  src url('../font/droidsans-webfont.eot?#iefix') format('embedded-opentype'),
    url('../font/droidsans-webfont.woff') format('woff'),
    url('../font/droidsans-webfont.ttf') format('truetype'),
    url('../font/droidsans-webfont.svg#droid_sansregular') format('svg')
  font-weight normal
  font-style normal

@import 'features/background/*'
@import 'features/loader/*'
@import 'features/youtube/*'
.fill
  position absolute
  top 0
  bottom 0
  left 0
  right 0
  margin 0
  padding 0

.centered-container
  position relative
  top 0
  left 0
  height 100%
  width 100%
  display table

  .centered
    display table-cell
    vertical-align middle
    text-align center


a 
  text-decoration none
  &:hover
    text-decoration none 

.grid 
  overflow hidden
  margin 0
  width 100%
  list-style none
  text-align center

body
  color textColor
  background-color backgroundColor

  font-family 'droid_sansregular'
    
  .body
    position relative
    overflow-x hidden

    .links
      display inline-block
      margin-top 2em

      .logo
        color #fff
        display inline-block
        display: inline-block
        font-size 1em
        text-decoration initial

        &:hover
          color accentColor

    .curtain
      background-color #171b1e
      color #fff
      z-index 1
      font-size 2em

      &.introduction
        .greeting .name
          font-weight bold
          
      &.conclusion
      
        .square
          display inline-block
          width 100px
          height 100px
          margin 25px
          vendor('transform',  rotate(-45deg))

          overflow hidden
        
          .pic
            width 150px
            height 150px
            margin -25px
            vendor('transform',  rotate(45deg))
            
            &.jeremy
              background-image url(/images/webProfile.png)
            &.shem
              background-image url(/images/shem.jpg)
        .summary
          //.summary-title
          
          .summary-text
            color subAccentColor
            font-size .5em
            margin auto
            width 100%
            max-width 456px
            text-align justify
            
            .right 
              float right
              font-weight 700
              
            .left 
              font-weight 700

    .section
      text-align center
      margin-right auto
      margin-left auto
    
      .section-title
        // font-size 2vw
        
        h2
          background-color rgba(0,0,0,0.1)
          box-shadow 0px 0px 15px 11px rgba(0,0,0,0.1)
          font-weight bold

        .text
          font-family 'Raleway', Arial, sans-serif
          font-weight 800
          font-size 4em
          line-height 1.3
          
        .icon
          font-size 2.5em
          
      .list
        list-style-type none
        margin 0
        margin-top 40px
        padding 0
        text-align center
  
        li
          display inline-flex
          margin 5px
          
      .description
        display inline-block
        background-color rgba(0,0,0,0.5)
        color white
        text-transform uppercase
        font-size 1.25em
        backface-visibility hidden
        width 100%
        margin-top 5em
      
        .description-text
          padding-left 25%
          padding-right 25%