backgroundColor = #ffffff
textColor = #000000
secondaryBackgroundColor = #ebebeb

vendor(prop, args)
  -webkit-{prop} args
  -moz-{prop} args
  -o-{prop} args
  {prop} args

background-linear-gradient(startPoint, startColor, startInterval, endColor, endInterval)
  background-color startColor
  background-image -webkit-linear-gradient(startPoint, startColor startInterval, endColor endInterval)
  background-image -moz-linear-gradient(startPoint, startColor startInterval, endColor endInterval)
  background-image -ms-linear-gradient(startPoint, startColor startInterval, endColor endInterval)
  background-image -o-linear-gradient(startPoint, startColor startInterval, endColor endInterval)
  background-image linear-gradient(startPoint, startColor startInterval, endColor endInterval)


@font-face
  font-family 'droid_sansregular'
  src url('droidsans-webfont.eot')
  src url('droidsans-webfont.eot?#iefix') format('embedded-opentype'),
    url('droidsans-webfont.woff') format('woff'),
    url('droidsans-webfont.ttf') format('truetype'),
    url('droidsans-webfont.svg#droid_sansregular') format('svg')
  font-weight normal
  font-style normal



.fill
  position absolute
  top 0
  bottom 0
  left 0
  right 0
  margin 0
  padding 0

body
  color textColor
  background-color backgroundColor

  font-family 'droid_sansregular'

  .background
    

    .canvas
      z-index -2

    .mesh
      z-index -1
      // background-color #FFF
      background-image url(/images/bg.png)
      background-repeat repeat
      background-position top left
  
  .header
    width 100%
  .body
    
    .list
      list-style-type none
      margin 0
      padding 0

      li
        display inline-flex
        margin 5px

  .blob
    width 365px
    height 160px
    padding: 5px
    background #ffffff
    background-linear-gradient(top, backgroundColor, 0%, secondaryBackgroundColor, 100%)
    vendor('box-shadow', 4px 5px 3px 0px #dddddd)

    .title
      font-size 150% 

    .thumbnail
      position absolute
      width 365px
      height 160px
      opacity 1
      vendor('transition', opacity .25s ease-out)

      &:hover
        opacity 0

      .caption
        position absolute
        display inline-block
    .summary
      padding 5px
      font-size 75%

  .footer
    position fixed
    bottom 0px
    color #dddddd
  
