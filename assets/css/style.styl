vendor(prop, args)
  -webkit-{prop} args
  -moz-{prop} args
  -o-{prop} args
  {prop} args

body
  // background-color #aaaaaa
  position absolute
  top 0
  bottom 0
  left 0
  right 0
  margin 0
  padding 0
  
  .header
    width 100%
  .body
    width 100%
    height 100%

  .blob
    // position relative

    .title
      position absolute
      font-size 150% 

    .thumbnail
      position absolute

      img
        opacity 1
        vendor('transition', opacity .25s ease-out)

        &:hover
          opacity 0

      .caption
        position absolute
        display inline-block
    .summary
      position absolute
      font-size 75%

  .footer
    position absolute
    bottom 0px
    color #dddddd
  
