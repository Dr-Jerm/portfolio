backgroundColor = #edf7f2
textColor = #000000
secondaryBackgroundColor = #ebebeb
headerColor = #96ca2d
subHeaderColor = #b5e655
accentColor = #4bb5c1
subAccentColor = #7fc6bc


vendor(prop, args)
  -webkit-{prop} args
  -moz-{prop} args
  -o-{prop} args
  {prop} args

background-linear-gradient(startPoint, startColor, startInterval, endColor, endInterval)
  background-color startColor
  background-image -webkit-linear-gradient(startPoint, startColor startInterval, endColor endInterval)
  background-image -moz-linear-gradient(startPoint, startColor startInterval, endColor endInterval)
  background-image -ms-linear-gradient(startPoint, startColor startInterval, endColor endInterval)
  background-image -o-linear-gradient(startPoint, startColor startInterval, endColor endInterval)
  background-image linear-gradient(startPoint, startColor startInterval, endColor endInterval)


@font-face
  font-family 'droid_sansregular'
  src url('droidsans-webfont.eot')
  src url('droidsans-webfont.eot?#iefix') format('embedded-opentype'),
    url('droidsans-webfont.woff') format('woff'),
    url('droidsans-webfont.ttf') format('truetype'),
    url('droidsans-webfont.svg#droid_sansregular') format('svg')
  font-weight normal
  font-style normal



.fill
  position absolute
  top 0
  bottom 0
  left 0
  right 0
  margin 0
  padding 0

body
  color textColor
  background-color backgroundColor

  font-family 'droid_sansregular'

  .background
    position fixed
    top 0em
    left 0em
    right 0em
    bottom 0em
    z-index: -1

    .canvas
      z-index -3

    .mesh
      z-index -2
      background-image url(/images/bg.png)
      background-repeat repeat
      background-position top lf
  
  .header
    background-color headerColor
    position fixed
    padding-right 1em
    padding-left 1em
    top 0em
    left -1em
    right -1em
    height 100px
    z-index 1
    //vendor('box-shadow', 0px 5px 0px 0px accentColor)
    
    .sub-name
      margin 0

    .links
      .logo
        width 2em
        height 2em
        background-size 2em 2em
    
    .accent-bar
      margin 0
      width: 100%
      height 5px
      background-color accentColor
    
  .body
    position relative
    top 104px
    
    .section
    
      .section-title
        text-align left
        width 200px
        height 40px
        padding-top 15px
        padding-bottom 15px
        background-color accentColor
        position relative
        left -1em
        padding-left 1em
        vendor('box-shadow', 4px 5px 3px 0px #dddddd)
        
        .text
          position absolute
          top 0.2em
          left 1em
        
        .icon
          display inline-block
          width 4em
          height 4em
          background-size 4em 4em
          position absolute
          top 0.1em
          right 1em
          fill subHeaderColor
      
      .list
        list-style-type none
        margin 0
        margin-top 40px
        padding 0
        text-align center
  
        li
          display inline-flex
          margin 5px

  .blob
    width 365px
    height 160px
    padding: 5px
    background #ffffff
    background-linear-gradient(top, backgroundColor, 0%, secondaryBackgroundColor, 100%)
    vendor('box-shadow', 4px 5px 3px 0px #dddddd)

    .title
      font-size 150% 

    .thumbnail
      position absolute
      width 365px
      height 160px
      opacity 1
      vendor('transition', opacity .25s ease-out)

      &:hover
        opacity 0

      .caption
        position absolute
        display inline-block
    .summary
      padding 5px
      font-size 75%
      
    .link
      a
        z-index 1

  .footer
    position fixed
    bottom 0px
    color #dddddd
  
