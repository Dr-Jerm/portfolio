backgroundColor = #edf7f2
textColor = #363636
secondaryBackgroundColor = #ebebeb
headerColor = #E3E3E3
subHeaderColor = #8A0917
// headerTextColor = #
accentColor = #7D7D7D
subAccentColor = #A3A3A3

headerHeight = 50px

vendor(prop, args)
  -webkit-{prop} args
  -moz-{prop} args
  -o-{prop} args
  {prop} args

background-linear-gradient(startPoint, startColor, startInterval, endColor, endInterval)
  background-color startColor
  background-image -webkit-linear-gradient(startPoint, startColor startInterval, endColor endInterval)
  background-image -moz-linear-gradient(startPoint, startColor startInterval, endColor endInterval)
  background-image -ms-linear-gradient(startPoint, startColor startInterval, endColor endInterval)
  background-image -o-linear-gradient(startPoint, startColor startInterval, endColor endInterval)
  background-image linear-gradient(startPoint, startColor startInterval, endColor endInterval)


@font-face
  font-family 'droid_sansregular'
  src url('../font/droidsans-webfont.eot')
  src url('../font/droidsans-webfont.eot?#iefix') format('embedded-opentype'),
    url('../font/droidsans-webfont.woff') format('woff'),
    url('../font/droidsans-webfont.ttf') format('truetype'),
    url('../font/droidsans-webfont.svg#droid_sansregular') format('svg')
  font-weight normal
  font-style normal

.fill
  position absolute
  top 0
  bottom 0
  left 0
  right 0
  margin 0
  padding 0

.centered-container
  position relative
  top 0
  left 0
  height 100%
  width 100%
  display table

  .centered
    display table-cell
    vertical-align middle
    text-align center


a 
  text-decoration none
  &:hover
    text-decoration none 

body
  color textColor
  background-color backgroundColor

  font-family 'droid_sansregular'

  .loading-curtain
    position fixed
    z-index 100

    background-color backgroundColor
    background-image url(/images/bg.png)
    background-repeat repeat
    background-position top lf

    &.curtain-hide-animation.ng-hide-add, &.curtain-hide-animation.ng-hide-remove 
      -webkit-transition 1.0s linear all
      transition 1.0s linear all
      display table!important
      opacity 1
    &.curtain-hide-animation.ng-hide 
      opacity 0

  .background
    position fixed
    top 0em
    left 0em
    right 0em
    bottom 0em
    z-index: -1

    .canvas
      z-index -3

    .mesh
      z-index -2
      background-image url(/images/bg.png)
      background-repeat repeat
      background-position top lf
    
  .body
    position relative
    overflow-x hidden
    // top headerHeight + 4px

    .introduction
      background-color #171b1e
      color #fff
      z-index 1
      font-size 2em
      // position fixed
      .greeting
        .name
          font-weight bold
      // .sub-title
      .links
        
        display inline-block
        margin-top 2em

        .logo
          display inline-block
          display: inline-block;
          color subAccentColor
          font-size 1em
          text-decoration initial

          &:hover
            color accentColor

    .section
      text-align center
    
      .section-title
        padding-top 15px
        padding-bottom 15px
        padding-left 1em
        font-size 2.5em
        
        .text
        
        .icon
          font-size 2.5em
      
      .list
        list-style-type none
        margin 0
        margin-top 40px
        padding 0
        text-align center
  
        li
          display inline-flex
          margin 5px

  .blob
    width 365px
    height 160px
    padding: 5px
    background #ffffff
    background-linear-gradient(top, #E3E3E3, 0%, #edf7f2, 100%)
    // vendor('box-shadow', 4px 5px 3px 0px #dddddd)

    .title
      font-size 150% 

    .thumbnail
      position absolute
      width 365px
      height 160px
      opacity 1

      &.tumbnail-hide-animation.ng-hide-add, &.tumbnail-hide-animation.ng-hide-remove 
        -webkit-transition 0.3s linear all
        transition 0.3s linear all
        display block!important
        opacity 1
      &.tumbnail-hide-animation.ng-hide 
        opacity 0


      .caption
        position absolute
        display inline-block
    .summary
      padding 5px
      font-size 75%
      
    .link
      a
        z-index 1

  .footer
    position fixed
    bottom 0px
    color #dddddd
  