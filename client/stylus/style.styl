backgroundColor = #edf7f2
textColor = #363636
secondaryBackgroundColor = #ebebeb
headerColor = #E3E3E3
subHeaderColor = #8A0917
// headerTextColor = #
accentColor = #7D7D7D
subAccentColor = #A3A3A3

headerHeight = 50px

vendor(prop, args)
  -webkit-{prop} args
  -moz-{prop} args
  -o-{prop} args
  {prop} args

background-linear-gradient(startPoint, startColor, startInterval, endColor, endInterval)
  background-color startColor
  background-image -webkit-linear-gradient(startPoint, startColor startInterval, endColor endInterval)
  background-image -moz-linear-gradient(startPoint, startColor startInterval, endColor endInterval)
  background-image -ms-linear-gradient(startPoint, startColor startInterval, endColor endInterval)
  background-image -o-linear-gradient(startPoint, startColor startInterval, endColor endInterval)
  background-image linear-gradient(startPoint, startColor startInterval, endColor endInterval)


@font-face
  font-family 'droid_sansregular'
  src url('../font/droidsans-webfont.eot')
  src url('../font/droidsans-webfont.eot?#iefix') format('embedded-opentype'),
    url('../font/droidsans-webfont.woff') format('woff'),
    url('../font/droidsans-webfont.ttf') format('truetype'),
    url('../font/droidsans-webfont.svg#droid_sansregular') format('svg')
  font-weight normal
  font-style normal

.fill
  position absolute
  top 0
  bottom 0
  left 0
  right 0
  margin 0
  padding 0

.centered-container
  position relative
  top 0
  left 0
  height 100%
  width 100%
  display table

  .centered
    display table-cell
    vertical-align middle
    text-align center


a 
  text-decoration none
  &:hover
    text-decoration none 

body
  color textColor
  background-color backgroundColor

  font-family 'droid_sansregular'

  .loading-curtain
    position fixed
    z-index 100

    background-color backgroundColor
    background-image url(/images/bg.png)
    background-repeat repeat
    background-position top lf

    &.curtain-hide-animation.ng-hide-add, &.curtain-hide-animation.ng-hide-remove 
      -webkit-transition 1.0s linear all
      transition 1.0s linear all
      display table!important
      opacity 1
    &.curtain-hide-animation.ng-hide 
      opacity 0

  .background
    position fixed
    top 0em
    left 0em
    right 0em
    bottom 0em
    z-index: -1

    .canvas
      z-index -3

    .mesh
      z-index -2
      background-image url(/images/bg.png)
      background-repeat repeat
      background-position top lf
    
  .body
    position relative
    overflow-x hidden
    // top headerHeight + 4px

    .introduction
      background-color #171b1e
      color #fff
      z-index 1
      font-size 2em
      // position fixed
      .greeting
        .name
          font-weight bold
      // .sub-title
      .links
        
        display inline-block
        margin-top 2em

        .logo
          display inline-block
          display: inline-block;
          color subAccentColor
          font-size 1em
          text-decoration initial

          &:hover
            color accentColor

    .work
      z-index 2

    .section
      text-align center
    
      .section-title
        padding-top 15px
        padding-bottom 15px
        padding-left 1em
        font-size 2.5em

        .text
        
        .icon
          font-size 2.5em
      
      .list
        list-style-type none
        margin 0
        margin-top 40px
        padding 0
        text-align center
  
        // li
        //   display inline-block
        //   margin 5px

  .carousel
    position relative
    .carousel-item 
      position absolute
      left 50%
      opacity 1

      &.carousel-hide-animation.ng-hide-add, &.carousel-hide-animation.ng-hide-remove
        -webkit-transition 1s ease-in-out left, 0.5s ease-in-out opacity
        transition 1s ease-in-out left, 0.5s ease-in-out opacity
        display inherit!important
        left 50%
        opacity 1

      &.carousel-hide-animation.ng-hide
        // opacity 0
        &.left
          left -100%
        &.right
          left 200%

    .crumbs
      margin-top 20em
      .crumb
        display inline-block
        margin 5px

  .blob
    position relative
    left -50%

    // width 365px
    height 160px
    padding: 5px

    .title
      font-size 150% 

    .thumbnail
      width 365px
      height 160px
      margin-right auto
      margin-left auto

    .summary
      padding 5px
      font-size 75%
      
    .link
      padding 8px
      margin-right auto
      margin-left auto
      border-width 2px
      border-style solid
      font-size 0.625rem
      font-weight 700
      border-color #5eb991
      width 125px
      cursor pointer

      

      a
        z-index 1
        color #5eb991

      &:hover 
        color #5eb991 !important

  .footer
    position fixed
    bottom 0px
    color #dddddd
  